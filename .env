# .env

# Database Configuration (Contoh)
PGHOST=localhost
PGUSER=openmusic
PGPASSWORD=secret
PGDATABASE=openmusic
PGPORT=5432

# Server Configuration (Contoh)
HOST=0.0.0.0
PORT=5001

# Kunci untuk Access Token (WAJIB ADA)
ACCESS_TOKEN_KEY=CHANGE_THIS_TO_A_VERY_LONG_AND_SECURE_RANDOM_STRING_FOR_JWT_SIGNING
